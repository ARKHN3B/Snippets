		"\u007D",

		"public function set${4:MyMethod}(\\$${2:$TM_SELECTED_TEXT})\u007B",
		"\t\\$this->\\$\u005F${2:$TM_SELECTED_TEXT} = \\$${2:$TM_SELECTED_TEXT};",
		"\u007D\n",

		"$0"
	],
	"description" : "Get and Set automatically"
}



