"getPHPset": {
    "publisher": "ARKHN3B",
    "version": "1.2.0",
    "prefix": "set",
	"body": [
		"${1:private} $$_${2:$TM_SELECTED_TEXT};\n",

		"public function get${3:MyMethod}()\u007B",
		"\treturn $$this->$_${2:$TM_SELECTED_TEXT};",
		"\u007D",

		"public function set${3:MyMethod}($${4:value})\u007B",
		"\t$$this->$_${2:$TM_SELECTED_TEXT} = $${4:value};",
		"\u007D\n"
	],
	"description" : "Get and Set automatically"
}



